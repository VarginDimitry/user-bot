{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}:${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}:${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        // almbic
        {
            "name": "generate migration",
            "type": "debugpy",
            "request": "launch",
            "module": "alembic",
            "args": "revision -m \"${input:migrationMessage}\" --autogenerate --rev-id \"$(date +%s%3)\"",
            "env": {
                "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}/src"
            }
        },
        {
            "name": "migrate up",
            "type": "debugpy",
            "request": "launch",
            "module": "alembic",
            "args": "upgrade head",
            "env": {
                "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}/src"
            }
        },
        {
            "name": "migrate down",
            "type": "debugpy",
            "request": "launch",
            "module": "alembic",
            "args": "downgrade -1",
            "env": {
                "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}/src"
            }
        }
    ],
    "inputs": [
        {
            "id": "migrationMessage",
            "type": "promptString",
            "description": "Migration message"
        }
    ]
}